<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorWhite"
            android:src="@drawable/ic_menu_black_24dp"
           />

        <TextView
            android:id="@+id/headtext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Location"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/Back"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        tools:context="com.apps.square.mercato.activity.Mer_Location" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/location_pic">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorPrimary"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style_primarycolor"
                    android:text="Elnady Branch"
                    android:padding="4dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/txtelnady"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style_primarycolor_sharp"
                    android:text="find us"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:id="@+id/txt_navidation_nady"
                    android:padding="2dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0.0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_style_primarycolor"
                android:text="Al radwan Branch"
                android:layout_gravity="center"
                android:padding="4dp"
                android:textColor="@color/colorWhite"
                android:id="@+id/txtradwan"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_style_primarycolor_sharp"
                    android:text="find us"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:id="@+id/txt_navidation_radwan"
                    android:padding="2dp"
                    />
</LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>