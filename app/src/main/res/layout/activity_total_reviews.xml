<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_reviews_totla"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.square.mercato.activity.Reviews">



    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorWhite"
            app:srcCompat="@drawable/ic_menu_black_24dp"
            android:visibility="invisible"

            />

        <TextView
            android:id="@+id/headtext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Total Reviews"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/Back"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drink"
        android:layout_below="@+id/head"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/drinkstext"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/review_icon"
                android:layout_alignParentStart="true"
                android:id="@+id/img"
                android:layout_gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/textView_drinks"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="25dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/rating_drinks"
            app:srb_isIndicator="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/rating_drinks"
            android:layout_marginTop="25dp"
            ></LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meals"
        android:layout_below="@+id/drink"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/mealstext"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/review_icon"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meals"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/textView_meals"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="25dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/rating_meals"
            app:srb_isIndicator="true"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/rating_meals"
            android:layout_marginTop="25dp"
            ></LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/services"
        android:layout_below="@+id/meals"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/servicetext"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/review_icon"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/textView_service"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="25dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/rating_service"
            app:srb_isIndicator="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/rating_service"
            android:layout_marginTop="25dp"
            ></LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clean"
        android:layout_below="@+id/services"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/cleantext"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/review_icon"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleanliess"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/textView_clean"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="25dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="0.5"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/rating_clean"
            app:srb_isIndicator="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/rating_clean"
            android:layout_marginTop="25dp"
            ></LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/team"
        android:layout_below="@+id/clean"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/teamtext"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/review_icon"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Work"
                android:textSize="18sp"
                android:layout_toRightOf="@+id/img"
                android:id="@+id/textView_team"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_starSize="25dp"
            app:srb_numberOfStars="5"
            app:srb_rating="3"
            app:srb_stepSize="1"
            app:srb_borderColor="@color/colorPrimary"
            app:srb_fillColor="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/rating_team"
            app:srb_isIndicator="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/rating_team"
            android:layout_marginTop="25dp"
            ></LinearLayout>

    </RelativeLayout>



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Your Review"
                android:layout_below="@+id/team"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_style_primarycolor"
                android:layout_marginTop="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:id="@+id/btn_post"
                />

</RelativeLayout>
